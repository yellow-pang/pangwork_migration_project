<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.pangwork_backend.Mapper.UserMapper">
    <!-- 유저 조회 -->
    <select id="selectUsers" resultType="com.example.pangwork_backend.DTO.Users">
        SELECT * FROM "user"
    </select>

    <select id="selectUser" resultType="com.example.pangwork_backend.DTO.Users">
        SELECT * 
        FROM "user"
        WHERE "USER_ID" = #{userId}
    </select>

    <insert id="insertUser">
        INSERT INTO 
            "user" 
        (
            "USER_ID", "NICKNAME"
        )
        VALUES (
            #{userId}, #{nickName}
        )
    </insert>

    <update id="updateLoginDate">
        UPDATE "user"
        SET "LOGIN_DATE" = CURRENT_TIMESTAMP
        WHERE "USER_ID" = #{userId}
    </update>

</mapper>